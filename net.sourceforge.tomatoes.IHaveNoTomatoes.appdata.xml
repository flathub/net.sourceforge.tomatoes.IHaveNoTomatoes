<component type="desktop-application">
  <id>net.sourceforge.tomatoes.IHaveNoTomatoes</id>
  <metadata_license>MIT</metadata_license>
  <project_license>Zlib</project_license>
  <name>I Have No Tomatoes</name>
  <summary>Tomato smashing game</summary>
  <developer_name>Mika Halttunen</developer_name>
  <description>
    <p>I Have No Tomatoes is an extreme leisure time activity idea of which
      culminates in the following question: How many tomatoes can you smash in ten short minutes?
      If you have the time to spare, this game has the vegetables just waiting to be eliminated!</p>
  </description>
  <url type="homepage">https://tomatoes.sourceforge.net</url>
  <url type="bugtracker">https://sourceforge.net/p/tomatoes/_list/tickets</url>
  <url type="donation">https://www.paypal.com/cgi-bin/webscr?item_name=Donation+to+I+Have+No+Tomatoes&amp;cmd=_donations&amp;business=mika.halttunen%40gmail.com</url>
  <launchable type="desktop-id">net.sourceforge.tomatoes.IHaveNoTomatoes.desktop</launchable>
  <provides>
    <binary>tomatoes</binary>
  </provides>
  <requires>
    <control>keyboard</control>
  </requires>
  <content_rating type="oars-1.1">
    <content_attribute id="violence-cartoon">moderate</content_attribute>
  </content_rating>
